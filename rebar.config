%% -*- mode: Erlang; fill-column: 80; comment-column: 75; -*-
%% Dependencies ================================================================
{deps, [{erlware_commons, ".*",
         {git, "https://github.com/erlware/erlware_commons.git",
          {branch, "master"}}},
        {providers, ".*",
         {git, "https://github.com/tsloughter/providers.git",
          {tag, "v1.3.0"}}},
        {erlydtl, ".*",
         {git, "https://github.com/erlydtl/erlydtl.git",
          {branch, "master"}}},
        {getopt, "",
         {git, "https://github.com/jcomellas/getopt.git",
          {branch, "master"}}}]}.

{escript_emu_args, "%%! +sbtu +A0 -noinput\n"}.
{escript_incl_apps,
 [getopt, erlware_commons, merl, erlydtl, providers, relx]}.

%% Compiler Options ============================================================
{erl_opts,
    [{platform_define, "^[0-9]+", namespaced_types},
     debug_info,
     warnings_as_errors,
     inline]}.

%% EUnit =======================================================================
{eunit_opts,
 [{report, {eunit_surefire, [{dir, "."}]}}]}.

%% Erlydtl =====================================================================
{erlydtl_opts, [{doc_root, "priv/templates"},
                force_recompile,
                {compiler_options, [report, return, debug_info]}]}.

{provider_hooks, [{pre, [{compile, {erlydtl, compile}}]}]}.

%% Profiles ====================================================================

{profiles, [{dev, [{deps, [{neotoma, ".*",
                            {git, "https://github.com/seancribbs/neotoma.git", {branch, "master"}}}
                          ]}
                  ]
            }]}.

{ct_opts, [{cover_spec, "cover.spec"},
           {cover_enabled, true},
           {cover_print_enabled, true}]}.
